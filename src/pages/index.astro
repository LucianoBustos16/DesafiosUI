import Layout from '@layout/Layout.astro';
---


<Layout title='Desafios UI'>
	<main class="max-w-screen-xl m-auto text-white p-16">

		<h1 class="text-center text-3xl">Desafios UI</h1>

		<ul class="w-full flex flex-wrap gap-8">
			<li>
				<a href="/desafio1" class="w-full p-[10px] rounded-lg font-black text-base text-[var(--azul)] bg-[var(--verde-neon)]"> Desafio 1</a>
			</li>
			<li>
				<a href="/desafio2" class="w-full p-[10px] rounded-lg font-black text-base text-[var(--azul)] bg-[var(--verde-neon)]"> Desafio 2</a>
			</li>
			<li>
				<a href="/desafio3" class="w-full p-[10px] rounded-lg font-black text-base text-[var(--azul)] bg-[var(--verde-neon)]"> Desafio 3</a>
			</li>
			<li>
				<a href="/desafio4/home" class="w-full p-[10px] rounded-lg font-black text-base text-[var(--azul)] bg-[var(--verde-neon)]"> Desafio 4</a>
